# ==========================================
# WedBeLoving - Environment Variables
# Copy this file to .env.local for development
# ==========================================
# All variables below are READ AT RUNTIME
# No need to rebuild container when changing these
# ==========================================

# ==========================================
# DATABASE (Required)
# ==========================================
DATABASE_URL="postgresql://wedbeloving:wedbeloving_secret@localhost:5432/wedbeloving?schema=public"

# ==========================================
# NEXTAUTH.JS (Required)
# ==========================================
# The canonical URL of your site
NEXTAUTH_URL="http://localhost:3000"

# Generate a secret: openssl rand -base64 32
# MUST be at least 32 characters in production
NEXTAUTH_SECRET="your-super-secret-key-change-in-production-min-32-chars"

# ==========================================
# GOOGLE OAUTH (Required)
# ==========================================
# Create credentials at: https://console.cloud.google.com/apis/credentials
# Authorized redirect URI: {NEXTAUTH_URL}/api/auth/callback/google
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# ==========================================
# DOCKER COMPOSE VARIABLES
# ==========================================
# PostgreSQL
POSTGRES_USER="wedbeloving"
POSTGRES_PASSWORD="wedbeloving_secret"
POSTGRES_DB="wedbeloving"

# Application
PORT=3000

# Auto-run Prisma migrations on container start (production)
AUTO_MIGRATE=false

# pgAdmin (Optional - use with: docker-compose --profile tools up)
PGADMIN_EMAIL="admin@wedbeloving.local"
PGADMIN_PASSWORD="admin"
